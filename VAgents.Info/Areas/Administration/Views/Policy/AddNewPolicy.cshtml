@model VAgents.Info.Areas.Administration.Models.AddPolicyModel
@{
    ViewBag.Title = "AddNewPolicy";
}
<div class="content-wrapper">
    <div class="row">
        @using (Html.BeginForm("CreateNewPolicy", "Policy", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-1 control-label" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Name, new { placeholder = "Title for new policy" })
                </div>
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.Description)
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Ask question" class="btn btn-primary btn-lg" />
            </div>
        }
    </div>
</div>
