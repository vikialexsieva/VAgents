@model VAgents.Info.Model.Menus


@using (Html.BeginForm("AddNewProductMenu", "Busisness", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Name, new { placeholder = "Title for new policy" })
        </div>
    </div>

    <div class="form-group">
        @Html.EditorFor(model => model.Description)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Price)
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Add Product" class="btn btn-primary btn-lg" />
    </div>
}